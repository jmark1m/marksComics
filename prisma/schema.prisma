datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Comic {
  id           Int    @id @default(autoincrement())
  title        String
  issue_number  String
  coverDate    String?
  volumeName   String?
  volumeId     Int
  volumeUrl    String?
  siteUrl      String?
  comicUrl     String?
  description  String?
  imageUrl     String?
  imageUrlTiny String?
  binLocation  String?
  quantityOwned Int @default(1)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}